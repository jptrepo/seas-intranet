---
const { pageHeadings } = Astro.props;
---

<div class="px-8">
  <h5 class="text-slate-900 font-semibold mb-4 text-sm leading-6">
    On this page
  </h5>
  <ul class="text-slate-700 text-sm leading-6">
    {
      pageHeadings.map((item, index) => {
        if (item.depth !== 2 && item.depth !== 3) return;
        return item.depth === 3 ? (
          <li key={index} class="ml-4">
            <a
              class="block py-1 font-medium font-medium text-sky-500"
              href={`#${item.slug}`}
            >
              {item.text}
            </a>
          </li>
        ) : (
          <li key={index}>
            <a
              class="group flex items-start py-1 hover:text-slate-900"
              href={`#${item.slug}`}
            >
              {item.text}
            </a>
          </li>
        );
      })
    }
  </ul>

